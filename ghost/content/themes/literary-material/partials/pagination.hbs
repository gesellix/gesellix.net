<nav class="pagination" role="pagination">
  {{#if prev}}
    <a class="newer-posts" href="{{pageUrl prev}}"><i class="fa fa-chevron-left fa-fw"></i></a>
  {{/if}}
  <span class="page-number">{{page}} / {{pages}}</span>
  {{#if next}}
    <a class="older-posts" href="{{pageUrl next}}"><i class="fa fa-chevron-right fa-fw"></i></a>
  {{/if}}
</nav>
