<!DOCTYPE html>
<html>
<head>
    {{! Document Settings }}
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    {{! Page Meta }}
    <title>{{meta_title}}</title>
    <meta name="description" content="{{meta_description}}" />
    <link rel="author" href="https://plus.google.com/+TobiasGesellchen"/>

    {{! Facebook Meta }}
    <meta property="og:title" content="{{meta_title}}"/>
    <meta property="og:type" content="website"/>
    {{#if @blog.logo}}<meta property="og:image" content="{{@blog.logo}}"/>{{/if}}
    {{#if url}}<meta property="og:url" content="{{url}}"/>
    {{else}}<meta property="og:url" content="{{@blog.url}}"/>{{/if}}
    {{#if meta_description}}<meta name="og:description" content="{{meta_description}}">
    {{else}}<meta name="og:description" content="{{@blog.description}}">{{/if}}

    {{! Twitter Meta }}
    <meta name="twitter:card" content="summary">
    {{#if url}}<meta property="twitter:url" content="{{url}}"/>
    {{else}}<meta property="twitter:url" content="{{@blog.url}}"/>{{/if}}
    <meta name="twitter:title" content="{{meta_title}}">
    {{#if @blog.logo}}<meta property="twitter:image" content="{{@blog.logo}}"/>{{/if}}
    {{#if meta_description}}<meta name="twitter:description" content="{{meta_description}}">
    {{else}}<meta name="twitter:description" content="{{@blog.description}}">{{/if}}

    <meta name="HandheldFriendly" content="True" />
    <meta name="MobileOptimized" content="320" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!--<link rel="shortcut icon" href="{{asset "favicon.ico"}}">-->

    {{! Styles'n'Scripts }}
    <link rel="stylesheet" type="text/css" href="{{asset "css/screen.css"}}" />
    <link href='//fonts.googleapis.com/css?family=Titillium+Web:400,600,700' rel='stylesheet' type='text/css' />
    <link rel="stylesheet" type="text/css" href="{{asset "css/font-awesome.min.css"}}" media="screen" />
    <!--[if IE 7]>
    <link rel="stylesheet" href="{{asset "css/font-awesome-ie7.min.css"}}" media="screen" />
    <![endif]-->
    <link rel="shortcut icon" href="{{asset "images/favicon.ico"}}" type="image/x-icon" />

    {{! Ghost outputs important style and meta data with this tag }}
    {{ghost_head}}

    <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-45011104-1', 'gesellix.net');
        ga('send', 'pageview');
    </script>

</head>
<body class="{{body_class}}">
    <header id="site-head" {{#if @blog.cover}} style="background-image: url({{@blog.cover}});" {{/if}}>
    <!--<header id="site-head">-->
        <a href="#toggle-sidebar" class="mobile-toggle"><i class="icon-reorder"></i></a>
        <div class="vertical">
            <div id="site-head-content" class="inner">
                {{#if @blog.logo}}
                    <a id="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>
                {{else}}
                    <h1 class="blog-title"><a href="{{@blog.url}}">{{@blog.title}}</a></h1>
                    <h2 class="blog-description">{{@blog.description}}</h2>
                {{/if}}
                {{#if @blog.description}}

                {{/if}}
            </div>
        </div>
    </header>
    {{{body}}}
    <footer class="site-footer">
        <div class="inner">
            <a class="subscribe" href="{{@blog.url}}/rss/"><i class="icon-rss"></i><b>RSS FEED</b><span>Subscribe to news</span></a>
            <section class="copyright">All content copyright <a href="{{@blog.url}}/">{{@blog.title}}</a> &copy; {{date format="YYYY"}} &bull; All rights reserved.</section>
            <section class="poweredby">Proudly published with <a class="icon-ghost" href="https://ghost.org" target="_blank">Ghost</a></section>
        </div>
    </footer>

    {{! Ghost outputs important scripts and data with this tag }}
    {{ghost_foot}}

    <script src="{{asset "js/jquery.nicescroll.min.js"}}" type="text/javascript"></script>
    <script src="{{asset "js/index.js"}}" type="text/javascript"></script>
</body>
</html>