<!DOCTYPE html>
<html>
<head>
  {{! Document Settings }}
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />

  {{! Page Meta }}
  <title>{{meta_title}}</title>
  <meta name="description" content="{{meta_description}}" />

  <meta name="HandheldFriendly" content="True" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <link rel="shortcut icon" href="{{asset "favicon.ico"}}">

  {{! Materiality FontAwesome }}
  <link rel="stylesheet" href="{{asset "css/font-awesome.min.css"}}" charset="utf-8">

  {{! Materiality Font }}
  <link href='//fonts.googleapis.com/css?family=Roboto:400,400italic,300,300italic,500,500italic' rel='stylesheet' type='text/css'>

  {{! Styles'n'Scripts }}
  <link rel="stylesheet" type="text/css" href="{{asset "css/screen.css"}}" charset="utf-8">
  <link rel="stylesheet" type="text/css" href="{{asset "css/color.css"}}" charset="utf-8">
  <link rel="stylesheet" type="text/css" href="{{asset "css/SETTINGS.css"}}" charset="utf-8">
  <link rel="stylesheet" type="text/css" href="{{asset "css/CUSTOM.css"}}" charset="utf-8">

  {{! Ghost outputs important style and meta data with this tag }}
  {{ghost_head}}
</head>
<body class="{{body_class}}">

  {{! NAVIGATION }}
  {{> navigation}}

  {{! Everything else gets inserted here }}
  {{{body}}}

  <div class="clearfix"></div>

  <div id="scroll-top" class="pull-right">
    <i class="fa fa-arrow-up fa-fw"></i>
  </div>

  <footer class="site-footer search">
    {{! SEARCH }}
    {{> search }}
  </footer>
  <footer class="site-footer social-links">
    {{! SOCIAL LINKS }}
    {{> social-links }}
  </footer>
  <footer class="site-footer clearfix">
    <section class="copyright"><a href="{{@blog.url}}">{{@blog.title}}</a> &copy; {{date format="YYYY"}}</section>
    <section class="poweredby">Proudly published with <a href="https://ghost.org">Ghost</a></section>
  </footer>

  {{! Ghost outputs important scripts and data with this tag }}
  {{ghost_foot}}

  {{! JS Libs }}
  <script type="text/javascript" src="{{asset "js/jquery.fitvids.js"}}"></script>
  <script type="text/javascript" src="{{asset "js/velocity.js"}}" charset="utf-8"></script>
  <script type="text/javascript" src="{{asset "js/velocity-ui.js"}}" charset="utf-8"></script>
  <script type="text/javascript" src="{{asset "js/images-loaded.js" }}" charset="utf-8"></script>
  <script type="text/javascript" src="{{asset "js/ghostHunter.js" }}" charset="utf-8"></script>

  {{! Ghost JS }}
  <script type="text/javascript" src="{{asset "js/index.js"}}"></script>

  {{! Materiality JS}}
  <script type="text/javascript" src="{{asset "js/materiality.js"}}" charset="utf-8"></script>

